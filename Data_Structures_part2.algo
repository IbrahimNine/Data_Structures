PROCEDURE Inputs(VAR arr: ARRAY_OF FLOAT[]; length: INTEGER)
VAR
    i:INTEGER;
BEGIN
    FOR i FROM 0 TO length-1 DO
        Write("Enter the value of ", i + 1,"/",length, " element: ");
        Read(arr[i]);
    END_FOR
END

